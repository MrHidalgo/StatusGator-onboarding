section#step.step.step--5

  .step__container
    .step__container-bg
      span
      span
      span
      span
    .step__container-content
      p.step__title.c-title Confire Branded Dashboard
      p.step__desc.c-desc Configure your Branded Dashboard below

  .step__wrapper

    .step__status
      img(src="img/img-status.svg" alt="")


    form#formStep5.step__form(name='formStep5' action='' method='' autocomplete='off')
      .step__form-field
        label
          h6 Template
          p Full page listing of your service statuses
          select(id='step_5_service' name='step_5_service')
            option(selected disabled) Select Industry
            option(value='Standard') Standard
            option(value='Action 2') Action 2
            option(value='Action 3') Action 3
            option(value='Action 4') Action 4
            option(value='Action 5') Action 5
      .step__form-field
        label
          h6 Page Title
          input(type='text' id='step_5_pageTitle' name='step_5_pageTitle' placeholder='')
      .step__form-field
        label
          h6 Page subtitle
          input(type='text' id='step_5_pageSubtitle' name='step_5_pageSubtitle' placeholder='')
      .step__form-field
        label.file
          h6 Logo
          p Optionally upload a logo
          div
            input(type='file' id='step_5_file' name='step_5_file' inputfile-js)
            label(for='step_5_file')
              p Choose file
              span Not file choosen

      .step__form-field
        label
          h6 Custom Domain
          p Host on our domain or your own
          input(type='text' id='step_5_domain' name='step_5_domain' placeholder='test-dashboard.statusgator.com')

    .step__btn.c-btn__wrapper
      a.c-btn.c-btn--secondary(href="/screen-4.html")
        span Previous
      a.c-btn.c-btn--primary(href="/screen-6.html" form-step-5-js)
        span Next
        i.icon-font.icon-arrow-right

